<CameraScreen>:
    GridLayout:
        cols: 1
        padding:20
        spacing:20
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
            size_hint_y: 0.8
            opacity: 0
        Button:
            id: btn_start_stop
            text: 'Start Camera'
            on_press: root.start() if root.ids.camera.play == False else root.stop()
            size_hint_y: 0.1
            background_color: 'greenyellow'
        Button:
            text: 'Capture'
            on_press: root.capture()
            size_hint_y: 0.1
            background_color: 'tomato'

<ImageScreen>:
    GridLayout:
        cols: 1
        padding:20
        spacing:20
        Image:
            id: img
            source:
            size_hint_y: 0.7
        Button:
            text: 'Create Sharable Link'
            on_press: root.create_link()
            size_hint_y: 0.1
            background_color: 'greenyellow'

        Label:
            id: img_link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            spacing:20
            Button:
                text: 'Copy Link'
                on_press: root.copy_link()
                background_color: 'greenyellow'
            Button:
                text: 'Open Link'
                on_press: root.open_link()
                background_color: 'greenyellow'

<RootWidget>:
    canvas.before:
        Color:
            rgb: (4/255, 20/255, 30/255)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'


